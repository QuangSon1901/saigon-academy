<div>
  <header role="banner">
    <div class="flex items-center bg-primary text-secondary h-[30px]">
      <div class="container mx-auto">
        <div class="pre-header flex items-center justify-between">
            {{ page.pre_header_left }}
            {{ page.pre_header_center }}
            {{ page.pre_header_right }}
        </div>
      </div>
    </div>
      <div class="container mx-auto">
        {% if page.header|render|striptags|trim is not empty %}
          {{ page.header }}
        {% endif %}
      </div>
  </header>

    <div class="layout-highlighted">
      <div class="container mx-auto">
        {{ page.highlighted }}
      </div>
    </div>

  <div class="layout-tabs">
    <div class="container mx-auto">
      {{ page.tabs }}
    </div>
  </div>

    <div class="layout-banner-top">
      {{ page.banner_top }}
    </div>

  <div class="layout-breadcrumbs">
    <div class="container mx-auto">
      {{ page.breadcrumbs }}
    </div>
  </div>

      <div class="layout-page-title">
        {% if is_front %}
          <div class="is-front container mx-auto">
            {{ page.page_title }}
          </div>
          {% else %}
          <div class="container mx-auto">
            {{ page.page_title }}
          </div>
        {% endif %}
      </div>

  <main role="main" class="main container mx-auto">

    <div class="layout-content">
      <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
      {{ page.content }}
    </div>{# /.layout-content #}

      <aside class="layout-sidebar" role="complementary">
        {{ page.sidebar }}
      </aside>

  </main>

    <div class="layout-content-bottom">
      {{ page.content_bottom }}
    </div>

  <div class="layout-footer">
    <footer class="footer" role="contentinfo">
      <div class="container mx-auto">
        {{ page.footer }}
      </div>
    </footer>
  </div>

    <div class="layout-bottom">
      <div class="container mx-auto">
        {{ page.bottom }}
      </div>
    </div>

</div>{# /.layout-container #}